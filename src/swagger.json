  "paths": {
    "/sessions": {
      "post": {
        "tags": ["Authorization"],
        "summary": "Authentication profile",
        "description": "To authentication a profile, use the following route and schema",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "user": { "type": "string" },
                  "password": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": { "type": "string" },
                    "profile": {
                      "type": "object",
                      "properties": {
                        "name": { "type": "string" },
                        "email": { "type": "string" }
                      }
                    },
                    "refresh_token": { "type": "string" }
                  }
                }
              }
            }
          },
          "400": {
            "description": "User or password incorrect!"
          }
        }
      }
    },
    "/refresh-token": {
      "post": {
        "tags": ["Authorization"],
        "summary": "Refresh a profile token",
        "description": "To refresh a profile token, use the following route and schema",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "token": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": { "type": "string" },
                    "refresh_token": { "type": "string" }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Refresh token does not exists"
          }
        }
      }
    },
